<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.verwandlung.voj.web.mapper.EmailValidationMapper">
	<!-- ResultMap -->
	<resultMap id="EmailValidationResultMap" type="org.verwandlung.voj.web.model.EmailValidation">
		<id property="email" column="email" />
		<result property="token" column="token" />
		<result property="expireTime" column="expire_time" />
	</resultMap>

	<!-- Methods -->
	<select id="getEmailValidation" 
		parameterType="String"
		resultMap="EmailValidationResultMap" 
		useCache="true">
		SELECT * 
		FROM voj_email_validation 
		WHERE email = #{email}
	</select>
	<insert id="createEmailValidation" 
		parameterType="org.verwandlung.voj.web.model.EmailValidation"
		flushCache="true">
		INSERT INTO voj_email_validation (email, token, expire_time) 
		VALUES (#{email}, #{token}, #{expireTime})
	</insert>
	<delete id="deleteEmailValidation"
		parameterType="String"
		flushCache="true">
		DELETE FROM voj_email_validation 
		WHERE email = #{email}
	</delete>
</mapper>